@page
@model EDUZAGO_PROJECT_DATABASE.Pages.Account.InstructorPendingModel
@{
    ViewData["Title"] = "Approval Pending";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-3 text-center" style="width: 500px;">
        <div class="card-body p-5">
        <div class="card-body p-5">
            @if (Model.Status == "rejected")
            {
                <h1 class="display-1 text-danger mb-4">
                    <i class="bi bi-x-circle"></i>
                </h1>
                <h3 class="fw-bold mb-3 text-danger">Account Rejected</h3>
                <p class="text-muted mb-4">
                    Your instructor account application has been rejected by the administrator.
                </p>
                <div class="alert alert-danger border-0 bg-light-danger">
                    <p class="mb-0 small">
                        If you believe this is an error, please contact:
                        <br />
                        <a href="mailto:s-a.ghoneim@zewailcity.edu.eg" class="fw-bold text-decoration-none">s-a.ghoneim@zewailcity.edu.eg</a>
                    </p>
                </div>
            }
            else
            {
                <h1 class="display-1 text-warning mb-4">
                    <i class="bi bi-hourglass-split"></i>
                </h1>
                <h3 class="fw-bold mb-3">Approval Pending</h3>
                <p class="text-muted mb-4">
                    Your instructor account is currently under review.
                    <br />
                    Please wait for admin approval.
                </p>
                <div class="alert alert-info border-0 bg-light-info">
                    <p class="mb-0 small">
                        For faster approval, contact verification at:
                        <br />
                        <a href="mailto:s-a.ghoneim@zewailcity.edu.eg"
                            class="fw-bold text-decoration-none">s-a.ghoneim@zewailcity.edu.eg</a>
                    </p>
                </div>
            }
            <div class="mt-4">
                <a asp-page="./Login" class="btn btn-outline-primary fw-bold">Return to Login</a>
            </div>
        </div>
    </div>
</div>
