@page
@model EDUZAGO_PROJECT_DATABASE.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-3" style="width: 450px;">
        <div class="card-body p-5">
            <h3 class="text-center fw-bold mb-4 text-primary">Create Account</h3>
            <p class="text-center text-muted mb-4">Join EDUZAGO today</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" placeholder="Full Name" />
                    <label asp-for="Input.Name">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-select">
                        <option value="Student">Student</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                    <label asp-for="Input.Role">Account Type</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">Register</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <span class="text-muted">Already have an account?</span>
                <a asp-page="./Login" class="text-decoration-none fw-bold">Sign in</a>
            </div>
        </div>
    </div>
</div>
