@page
@model EDUZAGO_PROJECT_DATABASE.Pages.StudentNamespace.BrowseCoursesModel
@{
    ViewData["Title"] = "Browse Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Browse Courses</h2>
        <a asp-page="./Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <form method="get" class="mb-4">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" asp-for="SearchText" class="form-control border-start-0 ps-0"
                placeholder="Search by course title..." />
            <button type="submit" class="btn btn-primary px-4">Search</button>
        </div>
    </form>

    <div class="row g-4">
        @if (Model.Courses.Rows.Count == 0)
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x text-muted display-1"></i>
                <p class="mt-3 text-muted fs-5">No courses found matching your search.</p>
            </div>
        }
        else
        {
            @foreach (System.Data.DataRow row in Model.Courses.Rows)
            {
                // Extract data safely
                string title = row["Title"].ToString();
                string desc = row["Description"] != DBNull.Value ? row["Description"].ToString() : "No description available.";
                string duration = row["Duration"] != DBNull.Value ? row["Duration"].ToString() : "N/A";
                // Handle Fees safely - could be DBNull or different numeric types
                string fees = "0.00";
                if (row.Table.Columns.Contains("Fees") && row["Fees"] != DBNull.Value)
                {
                    fees = Convert.ToDecimal(row["Fees"]).ToString("F2");
                }

                string code = row["Course_Code"].ToString();

                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 hover-effect">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold text-primary mb-0">@title</h5>
                                <span class="badge bg-light text-dark border">@duration</span>
                            </div>
                            <p class="card-text text-muted small flex-grow-1">
                                @(desc.Length > 100 ? desc.Substring(0, 100) + "..." : desc)
                            </p>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <span class="fw-bold h5 mb-0 text-success">$@fees</span>
                                <form method="post" asp-page-handler="Enroll" asp-route-courseCode="@code">
                                    <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">Enroll Now</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }
</style>
