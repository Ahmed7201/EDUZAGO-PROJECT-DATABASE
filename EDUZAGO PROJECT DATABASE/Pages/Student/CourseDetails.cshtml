@page "{courseId:int}"
@model EDUZAGO_PROJECT_DATABASE.Pages.StudentNamespace.CourseDetailsModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <h2>@Model.Course.Title</h2>
    <p class="lead">@Model.Course.Description</p>
    <p><strong>Instructor:</strong> @Model.Course.Instructor?.Name</p>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <h3><i class="bi bi-folder"></i> Resources</h3>
            @if (Model.Resources.Count > 0)
            {
                <ul class="list-group mb-4">
                    @foreach (var res in Model.Resources)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @res.ResourceName
                            <a href="@res.Link" class="btn btn-sm btn-outline-primary" target="_blank">Download</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No resources available.</p>
            }

            <h3><i class="bi bi-calendar"></i> Schedule</h3>
            @if (Model.Schedules.Count > 0)
            {
                <table class="table table-bordered mb-4">
                    <thead>
                        <tr>
                            <th>Day</th>
                            <th>Time</th>
                            <th>Topic</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sch in Model.Schedules)
                        {
                            <tr>
                                <td>@sch.Day</td>
                                <td>@sch.StartTime - @sch.EndTime</td>
                                <td>@sch.Topic</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Schedule not posted.</p>
            }

            <h3><i class="bi bi-award"></i> My Grades</h3>
            <div class="alert alert-info">
                Current Grade: <strong>@Model.MyGrade</strong>
            </div>

            <hr />
            <h3>Rate & Review</h3>
            <form method="post" asp-page-handler="Review">
                <div class="form-group mb-2">
                    <label>Rating (1-5)</label>
                    <select name="Rating" class="form-control" style="width: 100px;">
                        <option>5</option>
                        <option>4</option>
                        <option>3</option>
                        <option>2</option>
                        <option>1</option>
                    </select>
                </div>
                <div class="form-group mb-2">
                    <label>Comment</label>
                    <textarea name="Comment" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </form>

        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5>Course Actions</h5>
                    <a asp-page="./Dashboard" class="btn btn-secondary w-100">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
