@page
@model EDUZAGO_PROJECT_DATABASE.Pages.AdminNamespace.ManageCoursesModel
@{
    ViewData["Title"] = "Manage All Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Manage All Courses</h2>
            <p class="text-muted">View, edit, or delete any course in the system.</p>
        </div>
        <a asp-page="./Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to
            Dashboard</a>
    </div>

    <!-- COURSES LIST -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                <h5 class="mb-0 text-dark"><i class="bi bi-book me-2"></i>Course List</h5>
                <form method="get" class="d-flex flex-wrap gap-2 align-items-center">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Search courses..." value="@Model.SearchTerm">
                    </div>
                    
                    <select name="CategoryFilter" class="form-select form-select-sm" style="max-width: 150px;">
                        <option value="">All Categories</option>
                        @if (Model.CategoryOptions != null)
                        {
                            @foreach (var item in Model.CategoryOptions)
                            {
                                <option value="@item.Value" selected="@(item.Value == Model.CategoryFilter ? "selected" : null)">@item.Text</option>
                            }
                        }
                    </select>

                    <select name="SortOrder" class="form-select form-select-sm" style="max-width: 150px;">
                        <option value="">Sort By...</option>
                        <option value="price_asc" selected="@(Model.SortOrder == "price_asc" ? "selected" : null)">Price: Low to High</option>
                        <option value="price_desc" selected="@(Model.SortOrder == "price_desc" ? "selected" : null)">Price: High to Low</option>
                        <option value="title_asc" selected="@(Model.SortOrder == "title_asc" ? "selected" : null)">Name: A-Z</option>
                        <option value="title_desc" selected="@(Model.SortOrder == "title_desc" ? "selected" : null)">Name: Z-A</option>
                    </select>

                    <button type="submit" class="btn btn-sm btn-outline-primary">Apply</button>
                    <a asp-page="./ManageAllCourses" class="btn btn-sm btn-outline-secondary">Reset</a>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted text-uppercase small">
                    <tr>
                        <th class="ps-4">Image</th>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Fees</th>
                        <th>Duration</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.AllCourses.Rows.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted small">No courses found in database.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (System.Data.DataRow row in Model.AllCourses.Rows)
                        {
                            string title = row["Title"].ToString();
                            string imagePath = "/photos/generic.png";
                            if (title.ToLower().Contains("programming") || title.ToLower().Contains("code")) imagePath = "/photos/programming.png";
                            else if (title.ToLower().Contains("database") || title.ToLower().Contains("data")) imagePath = "/photos/database.png";
                            else if (title.ToLower().Contains("design") || title.ToLower().Contains("ux") || title.ToLower().Contains("ui")) imagePath = "/photos/design.png";

                            <tr>
                                <td class="ps-4">
                                    <img src="@imagePath" class="rounded shadow-sm" style="width: 40px; height: 40px; object-fit: cover;">
                                </td>
                                <td class="fw-bold">@row["Course_Code"]</td>
                                <td>@row["Title"]</td>
                                <td>@row["Fees"]</td>
                                <td>@row["Duration"]</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/Instructor/ManageCourse" asp-route-id="@row["Course_Code"]"
                                            class="btn btn-outline-primary shadow-sm" title="Edit">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        @if (title.StartsWith("Archived - "))
                                        {
                                             <form method="post" asp-page-handler="Unarchive" asp-route-id="@row["Course_Code"]" class="d-inline ms-1">
                                                <button type="submit" class="btn btn-outline-warning shadow-sm" title="Restore">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                             <form method="post" asp-page-handler="Archive" asp-route-id="@row["Course_Code"]" class="d-inline ms-1"
                                                onsubmit="return confirm('Archive this course? It will be hidden from new student searches but will remain for enrolled students.');">
                                                <button type="submit" class="btn btn-outline-secondary shadow-sm" title="Archive">
                                                    <i class="bi bi-archive"></i> Archive
                                                </button>
                                            </form>
                                        }

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@row["Course_Code"]"
                                            class="d-inline ms-1"
                                            onsubmit="return confirm('Are you sure you want to delete this course? If not sure, use Archive instead to hide it.');">
                                            <button type="submit" class="btn btn-outline-danger shadow-sm" title="Delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
