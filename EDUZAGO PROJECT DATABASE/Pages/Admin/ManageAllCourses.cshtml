@page
@model EDUZAGO_PROJECT_DATABASE.Pages.AdminNamespace.ManageCoursesModel
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Manage All Courses</h2>
            <p class="text-muted">View, edit, or delete any course in the system.</p>
        </div>
        <a asp-page="./Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to
            Dashboard</a>
    </div>

    <!-- COURSES LIST -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 text-dark"><i class="bi bi-book me-2"></i>Course List</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted text-uppercase small">
                    <tr>
                        <th class="ps-4">Code</th>
                        <th>Title</th>
                        <th>Category ID</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.AllCourses.Rows.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted small">No courses found in database.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (System.Data.DataRow row in Model.AllCourses.Rows)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@row["Course_Code"]</td>
                                <td>@row["Title"]</td>
                                <td>@row["Category_ID"]</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/Instructor/ManageCourse" asp-route-id="@row["Course_Code"]"
                                            class="btn btn-outline-primary shadow-sm" title="Edit">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@row["Course_Code"]"
                                            class="d-inline ms-1"
                                            onsubmit="return confirm('Are you sure you want to delete this course? This action cannot be undone.');">
                                            <button type="submit" class="btn btn-outline-danger shadow-sm" title="Delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
