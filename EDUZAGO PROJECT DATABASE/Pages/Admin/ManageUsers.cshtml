@page
@model EDUZAGO_PROJECT_DATABASE.Pages.AdminNamespace.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Manage Users</h2>
            <p class="text-muted">Oversee instructors and students accounts.</p>
        </div>
        <a asp-page="./Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
    </div>

    <!-- INSTRUCTORS SECTION -->
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white py-3 border-bottom d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div class="d-flex align-items-center">
                <i class="bi bi-person-video3 text-primary fs-4 me-2"></i>
                <h5 class="mb-0 text-primary">Instructors</h5>
            </div>
            <form method="get" class="d-flex gap-2">
                <!-- Identify which form submitted -->
                 <input type="hidden" name="StudentSearch" value="@Model.StudentSearch" />
                
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" name="InstructorSearch" class="form-control" placeholder="Search instructors..." value="@Model.InstructorSearch">
                    <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
                    @if(!string.IsNullOrEmpty(Model.InstructorSearch)) {
                         <a href="./ManageUsers?InstructorStatus=@Model.InstructorStatus&StudentSearch=@Model.StudentSearch" class="btn btn-outline-secondary"><i class="bi bi-x"></i></a>
                    }
                </div>

                <div class="btn-group" role="group">
                    <button type="submit" name="InstructorStatus" value="All" class="btn btn-sm @(Model.InstructorStatus == "All" || string.IsNullOrEmpty(Model.InstructorStatus) ? "btn-primary" : "btn-outline-primary")">All</button>
                    <button type="submit" name="InstructorStatus" value="Pending" class="btn btn-sm @(Model.InstructorStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">Pending</button>
                    <button type="submit" name="InstructorStatus" value="Approved" class="btn btn-sm @(Model.InstructorStatus == "Approved" ? "btn-success" : "btn-outline-success")">Approved</button>
                    <button type="submit" name="InstructorStatus" value="Rejected" class="btn btn-sm @(Model.InstructorStatus == "Rejected" ? "btn-danger" : "btn-outline-danger")">Rejected</button>
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted text-uppercase small">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.instructor_table.Rows.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted small">No instructors found in database.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (System.Data.DataRow item in Model.instructor_table.Rows)
                        {
                            // Safely handle missing columns because backend might not be joining with USER table yet
                            string name = "Unknown Instructor";
                            if (item.Table.Columns.Contains("Name")) name = item["Name"]?.ToString() ?? "Unknown";
                            else if (item.Table.Columns.Contains("Full_Name")) name = item["Full_Name"]?.ToString() ?? "Unknown";

                            string email = "N/A";
                            if (item.Table.Columns.Contains("Email")) email = item["Email"]?.ToString() ?? "N/A";

                            string id = "0";
                            if (item.Table.Columns.Contains("USER_ID")) id = item["USER_ID"].ToString();
                            else if (item.Table.Columns.Contains("Instructor_ID")) id = item["Instructor_ID"].ToString();

                            // Logic for string-based Approval_Status
                            string status = "pending"; 
                            if (item.Table.Columns.Contains("Approval_Status") && item["Approval_Status"] != DBNull.Value)
                            {
                                status = item["Approval_Status"].ToString().ToLower(); // Normalize to lowercase for comparison
                            }
                            // Fallback for boolean if specifically requested but user said they changed to string
                            else if (item.Table.Columns.Contains("IsApproved") && item["IsApproved"] != DBNull.Value)
                            {
                                bool isAppr = Convert.ToBoolean(item["IsApproved"]);
                                status = isAppr ? "approved" : "pending";
                            }

                            var avatar = name.Length > 0 ? name.Substring(0, 1) : "I";
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#@id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary bg-opacity-10 text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            @avatar
                                        </div>
                                        <span class="fw-bold">@name</span>
                                    </div>
                                </td>
                                <td class="text-muted">@email</td>
                                <td>
                                    @if (status == "approved")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Approved</span>
                                    }
                                    else if (status == "rejected")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">Pending</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (status != "approved")
                                    {
                                        <form method="post" asp-page-handler="Approve" asp-route-id="@id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success shadow-sm me-1" title="Approve Instructor">
                                                <i class="bi bi-check-lg"></i> Approve
                                            </button>
                                        </form>
                                    }
                                    
                                    @if (status == "pending")
                                    {
                                        <form method="post" asp-page-handler="Reject" asp-route-id="@id" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to REJECT this instructor?');">
                                            <button type="submit" class="btn btn-sm btn-warning shadow-sm me-1" title="Reject Instructor">
                                                <i class="bi bi-x-lg"></i> Reject
                                            </button>
                                        </form>
                                    }

                                    <form method="post" asp-page-handler="DeleteInstructor" asp-route-id="@id"
                                        class="d-inline" onsubmit="return confirm('Are you sure you want to delete this instructor?');">
                                        <button type="submit" class="btn btn-sm btn-danger shadow-sm" title="Delete Instructor">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- STUDENTS SECTION -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom d-flex align-items-center justify-content-between flex-wrap gap-2">
             <div class="d-flex align-items-center">
                <i class="bi bi-people text-success fs-4 me-2"></i>
                <h5 class="mb-0 text-success">Students</h5>
            </div>
            <form method="get" class="d-flex gap-2">
                <input type="hidden" name="InstructorStatus" value="@Model.InstructorStatus" />
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" name="StudentSearch" class="form-control" placeholder="Search students..." value="@Model.StudentSearch">
                    <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    @if(!string.IsNullOrEmpty(Model.StudentSearch)) {
                         <a href="./ManageUsers?InstructorStatus=@Model.InstructorStatus" class="btn btn-outline-secondary"><i class="bi bi-x"></i></a>
                    }
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted text-uppercase small">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.student_table.Rows.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted small">No students found in database.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (System.Data.DataRow item in Model.student_table.Rows)
                        {
                            string name = "Unknown Student";
                            if (item.Table.Columns.Contains("Name")) name = item["Name"]?.ToString() ?? "Unknown";

                            string email = "N/A";
                            if (item.Table.Columns.Contains("Email")) email = item["Email"]?.ToString() ?? "N/A";

                            string id = "0";
                            if (item.Table.Columns.Contains("USER_ID")) id = item["USER_ID"].ToString();
                            else if (item.Table.Columns.Contains("Student_ID")) id = item["Student_ID"].ToString();

                            var avatar = name.Length > 0 ? name.Substring(0, 1) : "S";
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#@id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success bg-opacity-10 text-success rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            @avatar
                                        </div>
                                        <span class="fw-bold">@name</span>
                                    </div>
                                </td>
                                <td class="text-muted">@email</td>
                                <td class="text-end pe-4">
                                    <form method="post" asp-page-handler="DeleteStudent" asp-route-id="@id" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this student?');">
                                        <button type="submit" class="btn btn-sm btn-danger shadow-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        font-weight: bold;
        text-transform: uppercase;
    }
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
    }
</style>
