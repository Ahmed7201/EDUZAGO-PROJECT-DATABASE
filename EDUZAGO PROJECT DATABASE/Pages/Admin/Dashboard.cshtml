@page
@model EDUZAGO_PROJECT_DATABASE.Pages.AdminNamespace.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-dark">Admin Dashboard</h1>
            <p class="text-muted lead mb-0">Overview of system statistics and management access.</p>
        </div>
        <div class="text-muted small text-end">
            <i class="bi bi-clock me-1"></i> @DateTime.Now.ToString("D")
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fs-1 fw-bold">@Model.StudentCount</div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                    <h6 class="card-title text-uppercase opacity-75">Total Students</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-success text-white stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fs-1 fw-bold">@Model.InstructorCount</div>
                        <i class="bi bi-person-video3 fs-1 opacity-50"></i>
                    </div>
                    <h6 class="card-title text-uppercase opacity-75">Instructors</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-info text-white stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fs-1 fw-bold">@Model.CourseCount</div>
                        <i class="bi bi-book fs-1 opacity-50"></i>
                    </div>
                    <h6 class="card-title text-uppercase opacity-75">Active Courses</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-warning text-dark stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fs-1 fw-bold">@Model.PendingInstructors</div>
                        <i class="bi bi-exclamation-circle fs-1 opacity-50"></i>
                    </div>
                    <h6 class="card-title text-uppercase opacity-75">Pending Approvals</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <a asp-page="./ManageUsers" class="card border-0 shadow-sm h-100 action-card text-decoration-none">
                <div class="card-body p-5 d-flex align-items-center">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle p-4 me-4">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="text-dark fw-bold mb-1">Manage Users</h4>
                        <p class="text-muted mb-0">Approve instructors, remove users, and oversee accounts.</p>
                    </div>
                    <div class="ms-auto text-muted">
                        <i class="bi bi-chevron-right fs-4"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-page="./ManageCategories" class="card border-0 shadow-sm h-100 action-card text-decoration-none">
                <div class="card-body p-5 d-flex align-items-center">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle p-4 me-4">
                        <i class="bi bi-tags-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="text-dark fw-bold mb-1">Manage Categories</h4>
                        <p class="text-muted mb-0">Create, edit, and organize course categories.</p>
                    </div>
                    <div class="ms-auto text-muted">
                        <i class="bi bi-chevron-right fs-4"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-page="./ManageAllCourses" class="card border-0 shadow-sm h-100 action-card text-decoration-none">
                <div class="card-body p-5 d-flex align-items-center">
                    <div class="icon-box bg-warning bg-opacity-10 text-dark rounded-circle p-4 me-4">
                        <i class="bi bi-book-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="text-dark fw-bold mb-1">Manage Courses</h4>
                        <p class="text-muted mb-0">View, edit, or delete any course in the system.</p>
                    </div>
                    <div class="ms-auto text-muted">
                        <i class="bi bi-chevron-right fs-4"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .stat-card {
        transition: transform 0.2s;
        border-radius: 12px;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .action-card {
        transition: all 0.2s;
        border-radius: 16px;
    }

    .action-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, .1) !important;
        background-color: #f8f9fa;
    }
</style>
