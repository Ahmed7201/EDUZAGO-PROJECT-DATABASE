@page "{courseId}"
@model EDUZAGO_PROJECT_DATABASE.Pages.InstructorNamespace.ManageGradesModel
@{
    ViewData["Title"] = "Manage Grades";
}

<div class="container mt-4">
    <h2>Manage Grades for @Model.CourseTitle</h2>
    <a asp-page="./Dashboard" class="btn btn-secondary mb-3">Back to Dashboard</a>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Completion Status</th>
                <th>Progress</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.StudentGrades)
            {
                <tr>
                    <td class="fw-bold">@student.StudentName</td>
                    <td>@student.Email</td>
                    <td>
                        @{
                            string badgeClass = student.CompletionStatus == "Completed" ? "bg-success" : "bg-warning text-dark";
                        }
                        <span class="badge @badgeClass">@student.CompletionStatus</span>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1" style="height: 20px;">
                                <div class="progress-bar" role="progressbar" style="width: @student.Progress%;"
                                    aria-valuenow="@student.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <span class="ms-2">@student.Progress%</span>
                        </div>
                    </td>
                    <td>
                        <a href="/Instructor/EditGrade?gradeId=@student.GradeID" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr class="my-5" />

    <h3>Course Reviews</h3>
    @if (Model.Reviews.Count == 0)
    {
        <div class="alert alert-info">No reviews found for this course yet.</div>
    }
    else
    {
        <table class="table table-hover table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th>Student Name</th>
                    <th>Rating</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model.Reviews)
                {
                    <tr>
                        <td class="fw-bold">@review.StudentName</td>
                        <td>
                            @for (int i = 0; i < review.Rating; i++)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            @for (int i = review.Rating; i < 5; i++)
                            {
                                <i class="bi bi-star text-muted"></i>
                            }
                        </td>
                        <td>@review.ReviewText</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
