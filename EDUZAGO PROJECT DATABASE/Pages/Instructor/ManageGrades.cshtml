@page "{courseId}"
@model EDUZAGO_PROJECT_DATABASE.Pages.InstructorNamespace.ManageGradesModel
@{
    ViewData["Title"] = "Manage Grades";
}

<div class="container mt-4">
    <h2>Manage Grades for @Model.CourseTitle</h2>
    <a asp-page="./Dashboard" class="btn btn-secondary mb-3">Back to Dashboard</a>

    <form method="post">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Completion Status</th>
                    <th>Progress</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.StudentGrades.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.StudentGrades[i].StudentName
                            <input type="hidden" name="StudentGrades[@i].StudentID"
                                value="@Model.StudentGrades[i].StudentID" />
                            <input type="hidden" name="StudentGrades[@i].StudentName"
                                value="@Model.StudentGrades[i].StudentName" />
                            <input type="hidden" name="StudentGrades[@i].GradeID" value="@Model.StudentGrades[i].GradeID" />
                        </td>
                        <td>@Model.StudentGrades[i].Email</td>
                        <td>
                            <select name="StudentGrades[@i].CompletionStatus" class="form-control">
                                <option value="In Progress"
                                    selected="@(Model.StudentGrades[i].CompletionStatus == "In Progress")">In Progress
                                </option>
                                <option value="Completed"
                                    selected="@(Model.StudentGrades[i].CompletionStatus == "Completed")">Completed</option>
                            </select>
                        </td>
                        <td>
                            <input name="StudentGrades[@i].Progress" value="@Model.StudentGrades[i].Progress"
                                class="form-control" placeholder="e.g. 85%" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Grades</button>
    </form>

    <hr class="my-5" />

    <h3>Course Reviews</h3>
    @if (Model.Reviews.Count == 0)
    {
            <div class="alert alert-info">No reviews found for this course yet.</div>
    }
    else
    {
            <table class="table table-hover table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Student Name</th>
                        <th>Rating</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var review in Model.Reviews)
                {
                            <tr>
                                <td class="fw-bold">@review.StudentName</td>
                                <td>
                            @for (int i = 0; i < review.Rating; i++)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            @for (int i = review.Rating; i < 5; i++)
                            {
                                <i class="bi bi-star text-muted"></i>
                            }
                                </td>
                                <td>@review.ReviewText</td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>
