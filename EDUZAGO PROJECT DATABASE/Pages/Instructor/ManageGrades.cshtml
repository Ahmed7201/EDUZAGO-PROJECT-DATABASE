@page "{courseId:int}"
@model EDUZAGO_PROJECT_DATABASE.Pages.InstructorNamespace.ManageGradesModel
@{
    ViewData["Title"] = "Manage Grades";
}

<div class="container mt-4">
    <h2>Manage Grades for @Model.CourseTitle</h2>
    <a asp-page="./Dashboard" class="btn btn-secondary mb-3">Back to Dashboard</a>

    <form method="post">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.StudentGrades.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.StudentGrades[i].StudentName
                            <input type="hidden" name="StudentGrades[@i].StudentID"
                                value="@Model.StudentGrades[i].StudentID" />
                            <input type="hidden" name="StudentGrades[@i].StudentName"
                                value="@Model.StudentGrades[i].StudentName" />
                        </td>
                        <td>@Model.StudentGrades[i].Email</td>
                        <td>
                            <input name="StudentGrades[@i].Grade" value="@Model.StudentGrades[i].Grade" class="form-control"
                                style="width: 100px;" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Grades</button>
    </form>
</div>
