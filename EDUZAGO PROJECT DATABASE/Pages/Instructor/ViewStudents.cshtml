@page
@model EDUZAGO_PROJECT_DATABASE.Pages.InstructorNamespace.ViewStudentsModel
@{
    ViewData["Title"] = "View Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Students in Course: @Model.CourseId</h2>
            <p class="text-muted">List of students enrolled in this course.</p>
        </div>
        <div>
            <a asp-page="./ManageGrades" asp-route-courseId="@Model.CourseId" class="btn btn-outline-primary me-2"><i
                    class="bi bi-journal-check"></i> Grades & Reviews</a>
            <a asp-page="./Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to
                Dashboard</a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted text-uppercase small">
                        <tr>
                            <th class="ps-4">Student ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Enrollment Date</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @if (Model.Students.Rows.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No students enrolled in this course yet.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (System.Data.DataRow row in Model.Students.Rows)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@row["Student_ID"]</td>
                                    <td>@row["Name"]</td>
                                    <td>@row["Email"]</td>
                                    <td>@Convert.ToDateTime(row["Enrollment_Date"]).ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
