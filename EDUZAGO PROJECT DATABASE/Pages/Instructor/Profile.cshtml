@page
@model EDUZAGO_PROJECT_DATABASE.Pages.InstructorNamespace.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <h2>Instructor Profile</h2>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group mb-3">
                    <label class="control-label">Name</label>
                    <input asp-for="MockInstructor.Name" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Email</label>
                    <input asp-for="MockInstructor.Email" class="form-control" readonly />
                    <small class="text-muted">Email cannot be changed.</small>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Expertise</label>
                    <input asp-for="MockInstructor.Expertise" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Bio (Professional Profile)</label>
                    <textarea asp-for="MockInstructor.Bio" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="./Dashboard" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
